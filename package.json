{
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.3.1",
    "markdownlint-cli2": "^0.21.0",
    "prettier": "^3.8.1",
    "pyright": "^1.1.408"
  },
  "name": "information",
  "packageManager": "bun@1.3.10",
  "private": true,
  "scripts": {
    "build": "bun run check && bun run build:force",
    "build:force": "node -e \"console.log('No build step')\"",
    "check": "bun run check:md && bun run check:prettier && bun run check:py",
    "check:md": "markdownlint-cli2",
    "check:prettier": "prettier --cache --check \"**/*.{astro,cjs,css,csv,gql,graphql,hbs,html,js,jsx,json,json5,jsonc,jsonl,less,mjs,pcss,sass,scss,svelte,styl,ts,tsx,vue,xml,yaml,yml}\"",
    "check:py": "uv run --locked ruff check && uv run --locked ruff format --check && pyright",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "format": "bun run format:md && bun run format:prettier && bun run format:py",
    "format:md": "markdownlint-cli2 --fix",
    "format:prettier": "prettier --cache --write \"**/*.{astro,cjs,css,csv,gql,graphql,hbs,html,js,jsx,json,json5,jsonc,jsonl,less,mjs,pcss,sass,scss,svelte,styl,ts,tsx,vue,xml,yaml,yml}\"",
    "format:py": "uv run --locked ruff check --fix && uv run --locked ruff format && pyright",
    "prepare": "uv sync --all-extras --dev && husky",
    "test": "bun run test:py",
    "test:py": "uv run --locked pytest"
  },
  "type": "module",
  "workspaces": [
    "."
  ]
}
